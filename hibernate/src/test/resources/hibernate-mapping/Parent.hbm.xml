<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.greenbee.tutorials.hibernate.model.mappig.Parent" table="wt_parent">
        <id name="id" type="long" column="id">
            <generator class="native" />
        </id>
        <property name="name" type="string" column="name" />

        <set name="children" cascade="all-delete-orphan">
            <!-- not-null must be set to true -->
            <key column="parent_id" not-null="true"/>
            <one-to-many class="com.greenbee.tutorials.hibernate.model.mappig.Child"/>
        </set>
    </class>
</hibernate-mapping>
