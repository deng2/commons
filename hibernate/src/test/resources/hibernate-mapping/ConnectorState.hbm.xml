<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.greenbee.tutorials.hibernate.model.ConnectorState" table="vt_connectorstate">
        <id name="connectorId" type="long" column="connectorId" />
        <property name="instanceId" type="integer" column="instanceId" />
        <property name="componentFullName" type="string" column="componentFullName" />
        <property name="state" type="binary" column="state" />
    </class>
</hibernate-mapping>