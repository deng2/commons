<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.greenbee.tutorials.hibernate.model.mappig.Person" table="wt_persons">
        <id name="id" column="id">
            <generator class="native" />
        </id>
        <property name="age" column="age" />
        <property name="name" column="name" />

        <list name="events" table="wt_person_events" cascade="all-delete-orphan">
            <key column="person_id" not-null="true" />
            <index column="event_index" type="integer" />
            <many-to-many column="event_id"
                class="com.greenbee.tutorials.hibernate.model.mappig.Event" />
        </list>
    </class>
</hibernate-mapping>
