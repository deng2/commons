<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.greenbee.tutorials.hibernate.model.mappig.User" table="wt_users">
        <id name="id" column="id">
            <generator class="native" />
        </id>
        <property name="name" column="name" />

        <set name="roles" table="wt_user_role_mappings" cascade="none">
            <key column="user_id" not-null="true" />
            <many-to-many column="role_id"
                class="com.greenbee.tutorials.hibernate.model.mappig.Role" />
        </set>
    </class>
</hibernate-mapping>
